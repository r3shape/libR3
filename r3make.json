{
    "main": {
        "flags": ["-Wall", "-Werror", "-std=c99", "-O3 -march=x86-64"],
        "defines": ["R3_BUILD_DLL"],

        "includes": ["."],
        "sources": ["src/libR3/r3.c"],

        "name": "libR3",
        "type": "dll",
        "dest": "bin"
    },
    
    "ecx": {
        "flags": ["-Wall", "-Werror", "-std=c99", "-O3 -march=x86-64"],
        "defines": ["R3_BUILD_DLL"],

        "includes": ["."],
        "libraries": {"R3": "bin"},
        "sources": ["src/libECX/ecx.c"],

        "name": "libECX",
        "type": "dll",
        "dest": "bin"
    },

    "r3t": {
        "flags": ["-Wall", "-Werror", "-std=c99"],

        "includes": ["."],
        "libraries": {"R3": "bin"},
        "sources": ["src/tests/r3/*/*.c"],

        "name": null,
        "type": "exe",
        "dest": "bin"
    },

    "ecxt": {
        "flags": ["-Wall", "-Werror", "-std=c99"],

        "includes": ["."],
        "libraries": {"R3": "bin", "ECX": "bin"},
        "sources": ["src/tests/ecx/*/*.c"],

        "name": null,
        "type": "exe",
        "dest": "bin"
    }
}
