{
	"main": {
		"flags": ["-Wall", "-Werror", "-std=c99"],
		"defines": ["R3KT_BUILD_SOURCE"],

		"includes": ["."],
		"sources": ["src/r3kt/*.c"],

		"name": "r3kt",
		"type": "dll",
		"dest": "bin"
	},
	
	"r3ktrt": {
		"flags": ["-Wall", "-Werror", "-std=c99"],
		"defines": ["R3KT_BUILD_SOURCE", "R3KT_BUILD_RUNTIME_SOURCE"],

		"includes": ["."],
		"sources": ["src/r3kt/*.c"],

		"name": "r3kt",
		"type": "dll",
		"dest": "bin"
	},

	"tests": {
		"flags": ["-Wall", "-Werror", "-std=c99"],

		"includes": ["."],
		"sources": ["src/tests/*.c"],
		"libraries": {
			"r3kt": "bin"
		},

		"name": null,
		"type": "exe",
		"dest": "bin"
	}

}
