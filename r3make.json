{
	"main": {
		"flags": ["-Wall", "-Werror", "-std=c99"],
		"defines": ["R3_BUILD_DLL"],

		"includes": ["."],
		"sources": [
			"r3kit/src/*.c",
			"r3kit/src/ds/*.c",
			"r3kit/src/io/*.c",
			"r3kit/src/mem/*.c"
		],

		"name": "r3kit",
		"type": "dll",
		"dest": "build"
	},
	"tests": {
		"flags": ["-Wall", "-Werror", "-std=c99"],

		"includes": ["."],
		"sources": ["tests/*.c"],
		"libraries": {
			"r3kit": "build"
		},

		"name": null,
		"type": "exe",
		"dest": "build"
	}
}
